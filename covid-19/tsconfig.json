{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./build",
    "rootDir": "./server",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "strict": true,
    "noUnusedLocals": false
  },
  "exclude": [
    "./client",
    "./build",
    "./node_modules"
  ],
  "lib": ["es2015"]
}
